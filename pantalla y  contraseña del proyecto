bool cadena(string cad){
bool k=false;
int tam,i;
string cad1;
       cad1=cad;
       tam=cad1.length();
       for(i=0;i<tam;i++){
             if(cad1[i]>='1'&& cad1[i]<='9')
                           k=true;
             else
             {
                           k=false;
                           i=tam;
            
             }
       }
       return (k);
}
void clave (){
 
int claveacceso,i=0;
       do{
             system("cls");
             do{
             system("cls");
             cout<<"\n\n\n      Ingrese la clave de acceso:\n\n\n "<<endl;
             cout<<"                 ";
             cin.clear();
             fflush(stdin);
             i++;
             }while(!(cin>>claveacceso));
       }while ( claveacceso!=clavetrue && i<3);
 
}


